<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity" >

    <Button
        android:id="@+id/main_activity_load_image_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_activity_load_image_bt"
        android:onClick="openImageGallery"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/main_activity_loaded_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/main_activity_blur_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:scaleType="fitStart"
            android:adjustViewBounds="true"

            android:layout_alignLeft="@id/main_activity_blur_overlay"
            android:layout_alignTop="@id/main_activity_blur_overlay"
            android:layout_alignRight="@id/main_activity_blur_overlay"
            android:layout_alignBottom="@id/main_activity_blur_overlay"/>

    </RelativeLayout>

</LinearLayout>